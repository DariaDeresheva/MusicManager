@model MusicManager.Models.SearchData
@{
	ViewBag.Title = "Search";
}

<h4>Search</h4>

@using (Html.BeginForm("SearchResult", null))
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<label class="control-label col-md-2">Search By Name:</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Search in:</label>
			<div class="col-md-10">
				@Html.CheckBoxFor(model => model.InAlbum)
				@Html.LabelFor(model => model.InAlbum)
				@Html.CheckBoxFor(model => model.InArtist)
				@Html.LabelFor(model => model.InArtist)
				@Html.CheckBoxFor(model => model.InSong)
				@Html.LabelFor(model => model.InSong)
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Rating:</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Year:</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Genre:</label>
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.GenreId, new SelectList(ViewBag.Genres, "GenreId", "GenreName"), "Doesn't Matter")
				@Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Find!" class="btn btn-default" />
			</div>
		</div>
	</div>
}